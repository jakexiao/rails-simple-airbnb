<p>Simple Airbnb</p>
<p> Add Flat <%= link_to "Add Flat", new_flat_path %></p>

<%= form_tag(flats_path, :method => :get) do |f| %>
    <%= text_field_tag :query %>
    <%= submit_tag 'search' %>
<% end %>


<h1>All our Flats (<%= @flats.count %>)</h1>
<% @flats.each do |flat|%>
    <div>  <%= flat.name %> </div>
    <div>  <%= flat.address %> </div>
    <div>  <%= flat.number_of_guests %> $<%= flat.price_per_night %> </div>
    <div>  <%= link_to "More info", flat_path(flat) %> <%= link_to "Edit", edit_flat_path(flat) %> <%= link_to "Delete",
    flat_path(flat),
    method: :delete,
    data: { confirm: "Are you sure?" } %></div>
<% end %>